            callbackHeaven = function (fns, callback) {
                var results = [];
                var index = 0;
                var cb = function (err, result) {
                    if (err) {
                        callback(err);
                        return;
                    }
                    results.push(result);
                    index += 1;
                    if (fns[index]) {
                        fns[index].call(this, cb);
                    } else {
                        callback(null, results);
                    }
                };
                fns[0].call(this, cb);
            };

